<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
 		xmlns:android="http://schemas.android.com/apk/res/android"
 		android:id="@+id/addPCLayout"
  	android:orientation="vertical"
  	android:layout_width="fill_parent" 
  	android:layout_height="fill_parent" >
    <LinearLayout
    	android:id="@+id/pcNameLayout" 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical" >
	    <TextView 
	    	android:id="@+id/pcNameLabel"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:text="Character Name"
	    	android:textSize="18sp" />
	    <EditText 
	    	android:id="@+id/pcNameEditText"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_below="@+id/pcNameLabel"
	    	android:singleLine="true"
	    	android:nextFocusDown="@+id/armorClassValue"
	    	android:selectAllOnFocus="true" />
    </LinearLayout>
    <TextView 
    	android:id="@+id/defenseLabel"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerHorizontal="true"
    	android:layout_below="@+id/pcNameLayout"
    	android:text="Defenses/Saving Throws"
    	android:textSize="18sp"
    	android:layout_marginTop="5dp" />
    <TableLayout
    	android:id="@+id/defenseLayout"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerHorizontal="true"
    	android:layout_below="@+id/defenseLabel"
    	android:layout_marginTop="5dp" >
    	<TableRow>
    		<TextView 
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_marginRight="5dp"
    			android:layout_weight="1"
    			android:text="AC"
    			android:textSize="16dp" />
    		<EditText
    			android:id="@+id/armorClassValue"
    			android:layout_weight="1"
    			android:nextFocusDown="@+id/fortitudeValue"
    			style="@style/statEntry" />
    		<TextView 
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_marginRight="5dp"
    			android:layout_weight="1"
    			android:text="FORT"
    			android:textSize="16dp" />
    		<EditText
    			android:id="@+id/fortitudeValue"
    			android:layout_weight="1"
    			android:nextFocusDown="@+id/reflexValue"
    			style="@style/statEntry" />
    	</TableRow>
    	<TableRow>
    		<TextView 
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_marginRight="5dp"
    			android:layout_weight="1"
    			android:text="REF"
    			android:textSize="16dp" />
    		<EditText
    			android:id="@+id/reflexValue"
    			android:layout_weight="1"
    			android:nextFocusDown="@+id/willValue"
    			style="@style/statEntry" />
    		<TextView 
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_marginRight="5dp"
    			android:layout_weight="1"
    			android:text="WILL"
    			android:textSize="16dp" />
    		<EditText
    			android:id="@+id/willValue"
    			android:layout_weight="1"
    			android:nextFocusDown="@+id/initModValue"
    			style="@style/statEntry" />
    	</TableRow>
    </TableLayout>
    
    <LinearLayout
    	android:id="@+id/init_hp_layout"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerHorizontal="true"
    	android:layout_below="@+id/defenseLayout"
    	android:layout_marginTop="20dp" >
    		<TextView 
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:text="Init Mod + "
    			android:layout_weight="1" />
    		<EditText 
    			android:id="@+id/initModValue"
    			android:layout_weight="1"
    			android:nextFocusDown="@+id/maxHPValue"
    			style="@style/statEntry" />
    		<TextView 
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:text="Max Hit Points "
    			android:layout_weight="1" />
    		<EditText 
    			android:id="@+id/maxHPValue"
    			android:layout_weight="1"
    			android:nextFocusDown="@+id/createPCDone"
    			style="@style/statEntry" />
    </LinearLayout>
    <LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/init_hp_layout"
    	android:orientation="horizontal">
	    <Button
	    	android:id="@+id/createPCDone"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="1"
	    	android:layout_alignParentBottom="true"
	    	android:layout_alignParentLeft="true"
	    	android:text="Done" />
	    <Button
	    	android:id="@+id/createPCCancel"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="1"
	    	android:layout_alignParentBottom="true"
	    	android:layout_alignParentRight="true"
	    	android:text="Cancel" />
	</LinearLayout>
</RelativeLayout>