<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="statEntry">
    	<item name="android:layout_width">40dp</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:layout_marginRight">5dp</item>
    	<item name="android:numeric">integer|decimal</item>
    	<item name="android:maxLength">2</item>
    	<item name="android:singleLine">true</item>
    	<item name="android:text">0</item>
    	<item name="android:selectAllOnFocus">true</item>
    </style>
    
    <style name="manualHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#7CFC00</item>
    </style>
    
    <style name="manualText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
