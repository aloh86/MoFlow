<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/partyListLayout"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent" >
    
    <ListView 
    	android:id="@android:id/list"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_above="@+id/pcEnctButtonLayout" />
    
    <LinearLayout
    	android:id="@+id/pcEnctButtonLayout"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_alignParentBottom="true" >
	    <Button
	    	android:id="@+id/addEnctBtn" 
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="1"
	    	android:text="Add Encounter"
	    	android:onClick="onClick" />
	    <Button
	    	android:id="@+id/editEnctBtn" 
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="1"
	    	android:layout_alignParentBottom="true"
	    	android:layout_centerHorizontal="true"
	    	android:text="Edit Encounter"
	    	android:onClick="onClick" />
	    <Button
	    	android:id="@+id/deleteEnctBtn" 
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="1"
	    	android:text="Delete Encounter"
	    	android:onClick="onClick" />
	</LinearLayout>
</RelativeLayout>
